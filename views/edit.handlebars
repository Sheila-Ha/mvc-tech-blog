<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit Blog "{{title}}":</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">blog name:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" value="{{title}}" />
      </div>
      <div class="form-group">
        <label for="blog-funding">needed funding ($):</label>
        <input class="form-input" type="number" id="blog-funding" name="blog-funding" value="{{funding}}" />
      </div>
      <div class="form-group">
        <label for="blog-post">post:</label>
        <textarea class="form-input" id="blog-post" name="blog-post">{{contents}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" value="{{id}}">Update</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/edit.js"></script>
