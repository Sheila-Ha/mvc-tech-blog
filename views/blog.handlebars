<div class='text-center'>
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{contents}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
  <p>
    <span for='img' aria-label='money'> $ </span>
    <span class='dollar-amount'>{{format_amount funding}}</span>
    needed
  </p>
  <p>
    <button class='btn btn-primary'>Fund this Blog!</button>
  </p>
</div>

<h3>Add a Comment</h3>
<form class='form new-comment-form'>
  <div class='form-group'>
    <label for='comment'>comment:</label>
    <textarea class='form-input' id='comment' name='comment'></textarea>
  </div>
  <div class='form-group'>
    <button type='submit' class='btn btn-primary btn-create' value="{{id}}">Create</button>
  </div>
</form>
<br>
{{#if comments.length}}
  <h3>Comments:</h3>

  {{#each comments as |comment|}}
    <p><b>{{format_time comment.date_created}}</b><br
      />{{comment.comment_content}}</p>
  {{/each}}
{{/if}}

<script src='/js/blog.js'></script>