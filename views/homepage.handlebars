<!-- Loop over each object in the blogs array -->
{{#each blogs as |blog| }}
<div class="row mb-4 blog">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/blog/{{blog.id}}">{{blog.title}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ðŸ’²</span>
      <!-- Pass funding value to the helper function -->
      <span class="dollar-amount">{{format_amount blog.funding}}</span>
      needed!
    </p>
  </div>
  
  <div class="col-md-7">
    <p class="blog-content">{{blog.blog_content}}</p>
      <p>Created by: {{blog.user.id}} on {{format_date blog.date_created}}</p>
    </p>
  </div>
</div>
{{/each}}
